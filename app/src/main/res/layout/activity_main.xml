<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/start_battery_percentage_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"

        />

    <TextView
        android:id="@+id/battery_percentage_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/start_battery_percentage_textview"
        android:layout_marginTop="16dp"

        />

    <TextView
        android:id="@+id/time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/battery_percentage_textview"
        android:layout_marginTop="16dp"

        android:layout_centerHorizontal="true"
         />

    <TextView
        android:id="@+id/difference_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_textview"
        android:layout_marginTop="16dp"

        android:layout_centerHorizontal="true"
        />



    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/difference_textview"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Start" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_button"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Stop" />

</RelativeLayout>
